<h2>入力した文字列を表示</h2>
<div id="app">
  <ul>
    <li v-for="item in myArray">{{ item }}</li>
  </ul>
  <button v-on:click="evenData()">偶数だけにする</button><br>
</div>

<script>
  new Vue({
    el:'#app',
    data: {
      myArray: [1,2,3,4,5,6]
    },
    methods: {
      evenData: function () {
        this.myArray = this.myArray.filter(
          function(value) { return value % 2 == 0;}
        );
      }
    }
  })
</script>
